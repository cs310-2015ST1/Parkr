<center><h1>Parkr</h1>

<%= form_tag parking_meters_path, method: :get do %>
    <%= label :location, "Search parking meters near: " %>
    <%= text_field_tag :location, params[:location] %>

    <%= label :distance, "Distance (km): " %>
    <%= text_field_tag :distance, params[:distance] %>

    <%= submit_tag "Search" %>
<% end %>
  <button onclick="toggleHeatmap()">Toggle Crimemap</button>
  <br>
</center>
<br>
<div style='width: 100%;'>
  <div id="map" style='width: 100%; height: 430px;'></div>
</div>
<script defer type="text/javascript">
    handler = Gmaps.build('Google', { markers: { clusterer: { maxZoom: 15, gridSize: 100 }}});
    handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
        markers = handler.addMarkers(<%=raw @hash.to_json %>);
        handler.map.centerOn(<%=@location%>);
        handler.getMap().setZoom(15);
    });

    // Add Crime Heatmap
    var map, pointarray, heatmap;

    var crimes = [];
    <% for crime in CrimeDatum.find_each %>
    {
        crimes.push({location: new google.maps.LatLng(<%=crime.lat%>, <%=crime.lon%>), weight: 5});
    }
    <% end %>

    var pointArray = new google.maps.MVCArray(crimes);

    var gradient = [
        'rgba(0, 255, 255, 0)',
        'rgba(0, 255, 255, 1)',
        'rgba(0, 191, 255, 1)',
        'rgba(0, 127, 255, 1)',
        'rgba(0, 63, 255, 1)',
        'rgba(0, 0, 255, 1)',
        'rgba(0, 0, 223, 1)',
        'rgba(0, 0, 191, 1)',
        'rgba(0, 0, 159, 1)',
        'rgba(0, 0, 127, 1)',
        'rgba(63, 0, 91, 1)',
        'rgba(127, 0, 63, 1)',
        'rgba(191, 0, 31, 1)',
        'rgba(255, 0, 0, 1)'
    ]

        heatmap = new google.maps.visualization.HeatmapLayer({
            data: pointArray,
            radius: 80,
            opacity: 0.8,
            gradient: gradient
        });

        heatmap.setMap(null);

    function toggleHeatmap() {
        heatmap.setMap(heatmap.getMap() ?  null : handler.getMap());
    }

</script>

