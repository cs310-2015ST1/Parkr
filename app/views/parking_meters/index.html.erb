<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&signed_in=true&libraries=visualization"></script>
<p id="notice"><%= notice %></p>
<html>
<body style="background-color:#FFFFFF">
<center>
  <div id="wrapper">
    <div id="sidebar-wrapper">
      <ul class="sidebar-nav">
        <li class="sidebar-brand">
          <div id="user-widget">
            <br>
            <% if current_user %>
                Welcome <strong><%= current_user.user_name %></strong>!
                <%= link_to "Sign out", signout_path, id: "sign_out" %>
            <% else %>
                <%= image_tag("facebook-2.ico", :alt => "Sign in to Facebook") %>
                <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %>
            <% end %>
          </div>
          <br>
        </li>
        <center>
          <%= render 'searches/form' %>
              </center>
          <br>
          <li>
            <button onclick="toggleHeatmap()">Toggle Crimemap</button>
          </li>



            <input type = "submit" id="gold_star" name="gold_star"
                   class="gold_star-button iconize" value="" />

          <li>


            <!-- TODO insert EV toggle here-->


          </li>
          <br>
          <li id="marker_info" style="width: 90%; height: 50% ; text-align: center; background: #FFFFFF; border:1px solid #000000; overflow:auto";>
            <p>
              <% i = 0 %>
              <%if @parking_meters != nil%>
                <%for pm in @parking_meters%>
                      <%if pm.marked_as? :favorite, :by => current_user%>
                        <div class="gold_star-button iconize"><%pm.unmark :favorite, current_user%></div>
                    <%else%>
                        <div class="gold_star-button iconize2"><%pm.mark_as :favorite, current_user%></div>
                    <%end%>
                      <%= (i = i+1).to_s + "."%>
                      <%= image_tag("parking-meter.png", :width => "11%", :height => "11%") %>
                      <%="Rates: #{pm.rate}"%><br>
                      <%="Time Limit: #{pm.time_limit}"%><br>
                      <%="Type: #{pm.head_type}"%><br>
                      <%="Pay By Phone: #{pm.pay_by_phone}"%><br>
                      <%="In Effect: #{pm.in_effect}"%><br>
                      <button>Visited</button>
                      <br>
                <%end%>
              <%else%>
                  No Parking Meters Present
              <%end%>
            </p>
          </li><br>
          </ul>
    </div>
    <div id="page-content-wrapper">
      <div class="page-content">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
            <h1>
              <%= image_tag("parkr.png", :width => "20%", :height => "20%") %>
            </h1>
            <div id="map" style='width: 100%; height: 500px;'>
              <script defer type="text/javascript">

                  handler = Gmaps.build('Google', { markers: { clusterer: { maxZoom: 18, gridSize: 100 }}});
                  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
                      markers = handler.addMarkers(<%=raw @hash.to_json %>);
                      handler.map.centerOn(<%=@location%>);
                      handler.getMap().setZoom(15);
                  });

                  // Add Crime Heatmap
                  var pointarray, heatmap;

                  var crimes = [];
                  <% for crime in CrimeDatum.find_each %>
                  {
                      crimes.push({location: new google.maps.LatLng(<%=crime.lat%>, <%=crime.lon%>), weight: 5});
                  }
                  <% end %>

                  var pointArray = new google.maps.MVCArray(crimes);

                  var gradient = [
                      'rgba(0, 255, 255, 0)',
                      'rgba(0, 255, 255, 1)',
                      'rgba(0, 191, 255, 1)',
                      'rgba(0, 127, 255, 1)',
                      'rgba(0, 63, 255, 1)',
                      'rgba(0, 0, 255, 1)',
                      'rgba(0, 0, 223, 1)',
                      'rgba(0, 0, 191, 1)',
                      'rgba(0, 0, 159, 1)',
                      'rgba(0, 0, 127, 1)',
                      'rgba(63, 0, 91, 1)',
                      'rgba(127, 0, 63, 1)',
                      'rgba(191, 0, 31, 1)',
                      'rgba(255, 0, 0, 1)'
                  ];

                  heatmap = new google.maps.visualization.HeatmapLayer({
                      data: pointArray,
                      radius: 80,
                      opacity: 0.8,
                      gradient: gradient
                  });

                  heatmap.setMap(null);

                  function toggleHeatmap() {
                      heatmap.setMap(heatmap.getMap() ?  null : handler.getMap());
                  }


                  document.getElementById("gold_star").addEventListener("click", function (e) {
                      var target = e.target;

                      target.classList.toggle("iconize");
                      target.classList.toggle("iconize2");
                  }, false);

                  function bindInfoWindow(html) {
                      document.getElementById('marker_info').innerHTML = html;
                  }





              </script>
            </div>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</center>

</body>
</html>